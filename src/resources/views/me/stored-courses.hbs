<div class="mt-4">
    <h3 class="mb-2">Khóa học của tôi</h3>
    <table class="table ">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên Khóa Học</th>
                <th scope="col">Level</th>
                <th scope="col" colspan="2">Miêu tả khóa học</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
                <tr>
                    <th scope="row">{{sum @index 1}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.level}}</td>
                    <td>@{{this.description}}</td>
                    <td>
                        <a href="/courses/{{this._id}}/edit" class="btn btn-link">Sửa</a>
                        <a href="" class="btn btn-link">Xóa</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>